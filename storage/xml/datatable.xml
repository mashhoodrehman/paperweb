                <title>User ID</title>
                <title>User Name</title>
                <title>Action</title>
            </header>
            <body>
                <column searchable="true" orderable="false" name="id">id</column>
                <column searchable="true" orderable="false" name="name">name</column>
                <column searchable="true" orderable="false" name="action">action</column>
            </body>
            <code name="adminaction" action="action"></code>
            <code name="adminactions" action="actions"></code>
            <where key="role" op="=" value="admin"></where>
            <config searchable="true" length="true" switchery="false" status="false" columnstatus="false" columnsearch="true">
